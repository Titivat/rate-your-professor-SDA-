<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <View
        android:id="@+id/teacherItem"
        android:layout_width="350dp"
        android:layout_height="160dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/main_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="314dp"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/decorateColor"
        app:layout_constraintEnd_toEndOf="@+id/teacherItem"
        app:layout_constraintStart_toStartOf="@+id/teacherItem"
        app:layout_constraintTop_toTopOf="@+id/teacherItem"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvTeacherItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:text="Mark Haug"
        android:textColor="@color/textColor"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintStart_toStartOf="@+id/teacherItem"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:text="Would take again"
        android:textColor="@color/textColor"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintStart_toStartOf="@+id/teacherItem"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:text="Level of Difficulty"
        android:textColor="@color/textColor"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/teacherItem"
        app:layout_constraintStart_toStartOf="@+id/teacherItem"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ivTeacherItemStar"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/tvTeacherItemTakeAgain"
        app:layout_constraintEnd_toStartOf="@+id/tvTeacherItemRatting"
        app:srcCompat="@drawable/ic_yellow_star"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvTeacherItemRatting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:text="5/5"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tvTeacherItemTakeAgain"
        app:layout_constraintEnd_toEndOf="@+id/teacherItem"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvTeacherItemTakeAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:text="100%"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tvTeacherItemDifficulty"
        app:layout_constraintEnd_toEndOf="@+id/teacherItem"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvTeacherItemDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:text="10.0"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/teacherItem"
        app:layout_constraintEnd_toEndOf="@+id/teacherItem"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>